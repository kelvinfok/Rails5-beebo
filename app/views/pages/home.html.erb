<%= form_tag root_path, method: :get do %>
<div class="row">

  <div class="col-md-6">
    <%= text_field_tag :search, params[:search], placeholder: "Search for a house", class: "form-control" %>
  </div>
  <div class="col-md-2">
    <%= submit_tag "Search", class: "btn btn-primary" %>
  </div>
</div>
<% end %>



<div class="row">
  <% @house.each do |house| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview">
        <%= image_tag house.photos[0].image.url(:medium) if house.photos.length > 0 %>
      </div>
      <div class="panel-body">
        <%= link_to house.listing_name, house %>
      </div>
    </div>
  </div>
  <% end %>
</div>
