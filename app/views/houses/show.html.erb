<div class="panel panel-default">
    <div class="panel-body">

        <div class="row">
            <!-- First row START -->
            <div class="col-md-12">
                <% if @photos %>
                <div id="carousell" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <% @photos.each do |photo| %>
                        <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
                        <% end %>
                    </ol>

                    <div class="carousel-inner" role="listbox">
                        <% if @photos %>
                        <% @photos.each do |photo| %>
                        <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                            <%= image_tag photo.image.url() %>
                        </div>
                        <% end %>
                        <% end %>
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>

                <% end %>
            </div>
        </div>
        <!-- First row END -->
        <br>
        <!-- Main Info -->
        <div class="row">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <br>
                        <%= image_tag avatar_url(@house.user), class: "img-circle avatar-large" %><br><br>
                        <%= @house.user.fullname %>
                    </div>
                    <div class="col-md-9">
                        <!-- Col-md-9 START -->
                        <h3><%= @house.listing_name %></h3>
                        <%= @house.address %>
                        <br><br>

                        <div class="row text-center row-space-1">
                            <div class="col-sm-3">
                                <i class="fa fa-home fa-3x"></i>
                            </div>
                            <div class="col-sm-3">
                                <i class="fa fa-bed fa-3x"></i>
                            </div>
                            <div class="col-sm-3">
                                <i class="fa fa-tint fa-3x"></i>
                            </div>
                            <div class="col-sm-3">
                                <i class="fa fa-usd fa-3x"></i>
                            </div>
                        </div>

                        <div class="row text-center row-space-1">
                            <div class="col-sm-3">
                                <%= @house.home_type %>
                            </div>
                            <div class="col-sm-3">
                                <%= @house.bed_room %>
                                <%= @house.bed_room > 1? "Rooms" : "Room" %>
                            </div>
                            <div class="col-sm-3">
                                <%= @house.bath_room %>
                                <%= @house.bath_room >1? "Bath Rooms" : "Bath Room" %>
                            </div>
                            <div class="col-sm-3">
                                <%= number_to_currency(@house.price, :precision => 0) %>
                            </div>
                        </div>

                        <br>
                        <h3>About This Listing</h3>
                        <p><%= @house.summary %></p>
                    </div>
                    <!-- Col-md-9 END -->

                </div>
                <!-- Row END -->
            </div>
            <!-- Col-md-10 END -->
        </div>
        <!-- Row END -->
    </div>
</div>
